/*
 * Workflow tests for main_star.nf using nf-core test data (homo_sapiens genome + GTF).
 */
nextflow_workflow {
    name "Test workflow main_star"
    script "../../main_star.nf"
    workflow "STAR_INDEX_MAIN"
    config "../config/nextflow.config"

    tag "index"
    tag "star"

    test("STAR index with nf-core homo_sapiens genome and GTF - stub") {
        tag "stub"
        options "-stub"

        when {
            params {
                fasta = 'https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/genomics/homo_sapiens/genome/genome.fasta'
                gtf   = 'https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/genomics/homo_sapiens/genome/genome.gtf'
                outdir = "$outputDir"
            }
        }

        then {
            assert workflow.success
        }
    }

    test("STAR index with nf-core homo_sapiens genome and GTF") {
        when {
            params {
                fasta = 'https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/genomics/homo_sapiens/genome/genome.fasta'
                gtf   = 'https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/genomics/homo_sapiens/genome/genome.gtf'
                outdir = "$outputDir"
            }
        }

        then {
            assert workflow.success
            assert workflow.trace.succeeded().size() >= 1
        }
    }
}
